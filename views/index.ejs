<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Currency Converter</title>
    <style media="screen">
        body {
            padding: 50px;
            font: 16px Helvetica, Arial;
        }
    </style>
</head>
<body>
<h2>Currency Converter</h2>

<div>
    <form action="/quote" method="post">
        <label for="convert_value">Value:</label>
        <input type="text" name="baseAmount" inputmode="decimal" value="1" id="baseAmount">
        <br><br>

        <label for="convert_from">From:</label>
        <select name="baseCurrency" id="baseCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="GBP">GBP</option>
            <option value="ILS">ILS</option>
        </select>
        <br><br>

        <label for="convert_to">To:</label>
        <select name="quoteCurrency" id="quoteCurrency">
            <option value="USD">USD</option>
            <option value="EUR">EUR</option>
            <option value="GBP">GBP</option>
            <option value="ILS">ILS</option>
        </select>
        <br><br>

        <button type="submit" id="btnSubmit">Submit</button>
    </form>

    <div>
        <br><br>

        <% if (typeof exchange != 'undefined') { %>
            <% if (exchange.exchangeRate !== exchange.quoteAmount) { %>
                <p>1 <%=data.baseCurrency%> = <%=exchange.exchangeRate%>  <%=data.quoteCurrency %><p>
            <% } %>
            <h3><%=data.baseAmount%> <%=data.baseCurrency%> = <%=exchange.quoteAmount%> <%=data.quoteCurrency %><h3>
        <% } %>


    </div>


</div>


</body>
</html>